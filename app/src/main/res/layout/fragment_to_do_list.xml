<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".craimFragment.ToDoList">

    <Button
        android:id="@+id/update_Btn"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="53dp"
        android:layout_height="49dp"
        android:layout_marginStart="314dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/button"
        android:clickable="true"
        android:drawableBottom="@drawable/ic_baseline_edit_24"
        android:src="@drawable/ic_baseline_edit_24"
        android:textColor="#FFFFFF"
        app:backgroundTint="#E6CCB2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/save_Btn" />

    <EditText
        android:id="@+id/title_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="124dp"
        android:ems="10"
        android:hint="Enter your title of your task"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/task_detailPT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="124dp"
        android:ems="10"
        android:hint="Enter your task"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_task" />

    <Button
        android:id="@+id/dateEnd_Btn"
        android:layout_width="136dp"
        android:layout_height="55dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="136dp"
        android:backgroundTint="#CB997E"
        android:clickable="true"
        android:src="@drawable/ic_baseline_calendar_today_24"
        android:text="Date"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_detailPT" />

    <Button
        android:id="@+id/delet_Btn"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="55dp"
        android:layout_height="54dp"
        android:layout_marginStart="314dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/daletebutton"
        android:clickable="true"
        android:drawableBottom="@drawable/ic_baseline_delete_24"

        android:src="@drawable/ic_baseline_delete_24"
        android:textColor="#FFFFFF"
        app:backgroundTint="#EDE0D4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_Btn" />

    <Button
        android:id="@+id/save_Btn"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="53dp"
        android:layout_height="55dp"
        android:layout_marginStart="314dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="46dp"
        android:background="@drawable/savebutton"
        android:backgroundTint="#DDB892"
        android:drawableBottom="@drawable/ic_baseline_save_alt_24"
        android:src="@drawable/ic_baseline_save_alt_24"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>